<resources>

    <style name="ReadMoreActionTextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:text">@string/action_read_more</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="MediaCharImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MediaSectionLabelTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ChevronButtonTextView">
        <item name="android:background">@drawable/ripple_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right_grey_24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppThemeErrorView">
        <item name="ev_retryColor">@color/accent</item>
    </style>

    <style name="library_update_sheet"></style>

    <style name="MaterialDialogSheet" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LibraryUpdateDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="LibraryUpdateLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/bottom_sheet_label_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LibraryUpdateEditable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="app:layout_constraintEnd_toEndOf">parent</item>
        <item name="app:layout_constraintHorizontal_bias">1</item>
    </style>

</resources>
